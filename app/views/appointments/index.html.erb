<p id="notice"><%= notice %></p>

<h1>Appointments</h1>

<table>
  <thead>
    <tr>
      <th>Patient</th>
      <th>Doctor</th>
      <th>Start date</th>
      <th>Start time</th>
      <th>End time</th>
      <th>Duration</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @appointments.each do |appointment| %>
      <tr>
        <td><%= appointment.patient.name %></td>
        <td>Dr.<%= appointment.doctor.name %></td>
        <td><%= appointment.start_date %></td>
        <td><%= appointment.start_time.strftime("%X") %></td>
        <td><%= appointment.end_time.strftime("%X") %></td>
        <%# <td><%= appointment.duration %1></td> %>
        <td><%= distance_of_time_in_words appointment.end_time, appointment.start_time %></td>

        <td><%= link_to 'Show', appointment %></td>
        <td><%= link_to 'Edit', edit_appointment_path(appointment) %></td>
        <td><%= link_to 'Destroy', appointment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

